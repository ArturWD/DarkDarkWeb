@model DDW.Core.Entities.Category

@{
    ViewBag.Title = "Create";
}

<section class="search-s">
    <div class="menu divider">
        <div class="search-functions">
            <a href="@Url.Action("Index", "Home")">
                <img class="logo" src="~/Content/Img/logo.svg" alt="DarkDarkWeb">
            </a>
        </div>
        @Html.Partial("_AdminFunctions")
    </div>
</section>

<section class="search-s flex">
    <div class="search-categories">

    </div>
    <div class="search-return">
        <div class="search-return--header">
            <h5 class="resource-number">Create New Category</h5>
            <a href="@Url.Action("Index")" class="add">
                <i class="fas fa-list-ul"></i>
                <h4 class="menu-item-title">Back to List</h4>
            </a>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "error-message" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn-create" />
                    </div>
                </div>
            </div>
        }


    </div>
</section>




